        <servlet-class>uncc.tls.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/loginServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>BillingAddressServlet</servlet-name>
        <servlet-class>uncc.tls.servlets.BillingAddressServlet</servlet-class>
    </servlet>
    <servlet>
